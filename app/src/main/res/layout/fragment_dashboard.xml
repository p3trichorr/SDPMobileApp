<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentDashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.dashboard.DashboardFragment">

    <ImageView
        android:id="@+id/mainBanner"
        android:layout_width="wrap_content"
        android:layout_height="141dp"
        android:scaleType="centerCrop"
        android:src="@drawable/main_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/navigateTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigate to"
        android:textStyle="bold"
        android:textColor="#006BB4"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainBanner"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/autumnButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="0dp"
        android:paddingHorizontal="5dp"
        android:layout_marginHorizontal="70dp"
        app:layout_constraintVertical_bias="0.05"
        android:text="Autumn Period"
        android:textColor="@color/white"
        android:textStyle="italic|bold"
        android:textAlignment="textEnd"
        android:drawableLeft="@drawable/autumn_logo"
        app:backgroundTint="@color/yellow_autumn"
        android:background="@drawable/back_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navigateTo" />

    <Button
        android:id="@+id/springButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="0dp"
        android:paddingHorizontal="5dp"
        android:layout_marginHorizontal="70dp"
        app:layout_constraintVertical_bias="0.1"
        android:text="Spring Period"
        android:textColor="@color/white"
        android:textStyle="italic|bold"
        android:textAlignment="textEnd"
        android:drawableLeft="@drawable/spring_logo"
        app:backgroundTint="@color/green_spring"
        android:background="@drawable/back_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autumnButton" />

</androidx.constraintlayout.widget.ConstraintLayout>